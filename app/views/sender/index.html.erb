<div class="all">
  <div>
    <div class="slide" id="slide1">
      <svg style="width:100px;height:100px;margin-left:46%" viewBox="0 0 24 24">
          <path fill="white" d="M9.78,18.65L10.06,14.42L17.74,7.5C18.08,7.19 17.67,7.04 17.22,7.31L7.74,13.3L3.64,12C2.76,11.75 2.75,11.14 3.84,10.7L19.81,4.54C20.54,4.21 21.24,4.72 20.96,5.84L18.24,18.65C18.05,19.56 17.5,19.78 16.74,19.36L12.6,16.3L10.61,18.23C10.38,18.46 10.19,18.65 9.78,18.65Z" />
      </svg>
      <h1 style="text-align:center; color: white;">Mensaje</h1>
      <div class="container">
        <div class="row">
          <div class="col-6">
            <div class="container box">
              <%= form_tag sender_index_path, method: :post, multipart: true do %>
              <h2>Escribe tu mensaje al canal</h2>
                <div class="form-group">
                  <label for="exampleInputEmail1">Mensaje</label>
                  <%= text_field_tag :message, "", class: 'form-control' %>

                  <small id="emailHelp" class="form-text text-muted">Se enviar√° al canal</small>
                </div>
                  <%= submit_tag "Enviar", class: 'btn btn-primary' %>
              <% end %>
            </div>
          </div>
          <div class="col-6">
            <%=render 'sender_user/index'%>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div style="margin-top:30px;margin-bottom:30px">
  <h1 style="text-align:center;color: white;">Ultimos mensajes</h1>
    <div class="container box tabla">
      <table class="table">
        <thead>
          <tr>
            <th>id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Last text</th>
          </tr>
        </thead>
        <tbody>
      <% @messages.each do |message| %>
          <tr>
            <th scope="row"><%= message.telegram_id %></th>
            <td><%= message.first_name %></td>
            <td><%= message.last_name %></td>
            <td><%= message.text %></td>
            <td><%= link_to "Borrar", message, :confirm => "Estas sefuro?", :method => :delete %></td>


          </tr>
      <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
