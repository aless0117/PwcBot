<div class="all">
  <div>
    <div class="slide" id="slide1">
      <h1 style="text-align:center;">Mensaje</h1>
      <div class="container">
        <div class="row">
          <div class="col-6">
            <div class="container box">
              <%= form_tag sender_index_path, method: :post, multipart: true do %>
              <h2>Escribe tu mensaje al canal</h2>
                <div class="form-group">
                  <label for="exampleInputEmail1">Mensaje</label>
                  <%= text_field_tag :message, "", class: 'form-control' %>

                  <small id="emailHelp" class="form-text text-muted">Se enviar√° al canal</small>
                </div>
                  <%= submit_tag "Enviar", class: 'btn btn-primary' %>
              <% end %>
            </div>
          </div>
          <div class="col-6">
            <%=render 'sender_user/index'%>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div style="margin-top:30px;margin-bottom:30px">
  <h1 style="text-align:center">Ultimos mensajes</h1>
    <div class="container box tabla">
      <table class="table">
        <thead>
          <tr>
            <th>id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Last text</th>
          </tr>
        </thead>
        <tbody>
      <% @messages.each do |message| %>
          <tr>
            <th scope="row"><%= message.telegram_id %></th>
            <td><%= message.first_name %></td>
            <td><%= message.last_name %></td>
            <td><%= message.text %></td>
            <td><%= link_to "Borrar", message, :confirm => "Estas sefuro?", :method => :delete %></td>


          </tr>
      <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
